<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p><%= if @task.completed then "Task completed!" else "Task not completed yet" end %></p>


<%= link_to "All tasks", tasks_path %>
<%= link_to "Edit a task", tasks_edit_path(@task) %>
<%= link_to "Delete a task", task_path(@task), method: :delete %>
